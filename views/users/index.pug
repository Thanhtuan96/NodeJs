extends ../layouts/common

block content
  h1.ml-3.mt-5 Users
  a.ml-3(href="/users/create") new
  form(action="/users/search", method="GET")
    input.mr-3.ml-3(type="text",name="q")
    button.btn.btn-primary Search
    table.table.mt-5
      tr
        th Name
        th Phone
        th Actions
      each user in users
       tr
        td=  user.name
        td= user.phone
        td
         a.btn.btn-light(href='/users/'+ user.id) View
         a.btn.btn-blue(href='/users/delete/'+ user.id)
          i.fas.fa-trash