extends ../layouts/common

block content

 h1.mt-5.ml-5 Create user

 if errors
    each error in errors
     .alert.alert-danger= error

 form.ml-5(action="/users/create",method = "POST")
    .form-group
     label(for="name") Name
     input#name.form-control(name = "name", type="text", value=values ? values.name : "")
    .form-group
     label(for="phone") Phone
     input#phone.form-control(name = "phone", type="text", value=values ? values.phone : "")
     .form-group
     label(for="email") Phone
     input#email.form-control(name = "email", type="text", value=values ? values.email : "")

    button Create